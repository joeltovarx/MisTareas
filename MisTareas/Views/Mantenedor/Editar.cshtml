@model TareasModel
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header">
        Editar Tarea
    </div>
    <div class="card-body">
        <form asp-action="Editar" asp-controller="Mantenedor" method="post">

            <input asp-for="idTarea" type="hidden" class="form-control">

            <div class="mb-3">
                <label class="form-label">Descripcion</label>
                <input asp-for="descripcion" type="text" class="form-control">
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-warning">Volver</a>
        </form>
    </div>
</div>

